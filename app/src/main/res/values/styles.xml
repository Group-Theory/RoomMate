<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="list_item">
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="list_item.roommate_list">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="list_item.roommate_list.username">
        <item name="android:background">@color/primary</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="list_item.roommate_list.score">
        <item name="android:background">@color/cream</item>
        <item name="android:layout_marginBottom">@dimen/list_item_padding</item>
    </style>

    <style name="list_item.is_complaint">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@color/cream</item>
    </style>

    <style name="list_item.description">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="list_item.score">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/list_item_padding</item>
    </style>
</resources>